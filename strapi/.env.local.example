# Configuration pour le développement local avec Docker Compose
# Copiez ce fichier vers .env.local et ajustez les valeurs

# Configuration de la base de données PostgreSQL locale
DATABASE_NAME=strapi
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=strapi
DATABASE_PORT=5432

# Secrets Strapi (générez des valeurs aléatoires sécurisées)
# Pour générer: openssl rand -base64 32
JWT_SECRET=changez_moi_jwt_secret_local_dev
ADMIN_JWT_SECRET=changez_moi_admin_jwt_secret_local_dev
APP_KEYS=changez_moi_app_key_1,changez_moi_app_key_2,changez_moi_app_key_3,changez_moi_app_key_4
# Pour générer API_TOKEN_SALT: node -e "console.log(require('crypto').randomBytes(16).toString('base64'))"
API_TOKEN_SALT=changez_moi_api_token_salt_local_dev
TRANSFER_TOKEN_SALT=changez_moi_transfer_token_salt_local_dev

# Configuration serveur
NODE_ENV=development
HOST=0.0.0.0
PORT=1337
